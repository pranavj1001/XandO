<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.learning.pranavjain.xando.MainActivity"
    android:scrollIndicators="bottom|right">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/board"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:id="@+id/imageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="3"
        android:id="@+id/ll1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_weight="1"
            android:id="@+id/image00"
            android:scaleType="fitCenter"
            android:onClick="shape00" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_weight="1"
            android:id="@+id/image01"
            android:onClick="shape01" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_weight="1"
            android:id="@+id/image02"
            android:onClick="shape02" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:weightSum="3"
        android:id="@+id/ll2"
        android:layout_below="@+id/ll1"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_weight="1"
            android:id="@+id/image10"
            android:onClick="shape10" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_weight="1"
            android:id="@+id/image11"
            android:onClick="shape11" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_weight="1"
            android:id="@+id/image12"
            android:onClick="shape12" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:weightSum="3"
        android:id="@+id/ll3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_weight="1"
            android:id="@+id/image20"
            android:onClick="shape20" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_weight="1"
            android:id="@+id/image21"
            android:onClick="shape21" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_weight="1"
            android:id="@+id/image22"
            android:onClick="shape22" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/winner"
        android:background="#3432bc"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:textAlignment="center"
            android:id="@+id/winnerName"
            android:layout_weight="1"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="TRY AGAIN?"
            android:textSize="16sp"
            android:id="@+id/reset"
            android:background="#020540"
            android:textColor="#ffffff"
            android:padding="15dp" />

    </LinearLayout>

</RelativeLayout>
